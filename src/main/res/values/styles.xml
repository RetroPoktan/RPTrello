<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_green_dark</item>

        <!-- No Actionbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!-- Theme for Launcher -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="colorControlNormal">@color/textColorHint</item>
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <!-- common button style -->

    <style name="Button" />

    <style name="Button.Common">
        <item name="android:padding">@dimen/common_button_padding</item>
    </style>

    <style name="Button.Common.Green">
        <item name="backgroundTint">@android:color/holo_green_dark</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Button.Welcome" parent="Button.Common">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/btn_welcome</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">144dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Borderless" parent="@android:style/Widget.Holo.Button.Borderless" />


    <style name="EditText" />

    <style name="EditText.Auth">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TabLayout textAllCaps False -->
    <style name="AppTheme.Tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.Tab</item>
    </style>

    <style name="AppTheme.Spinner.Underlined" parent="@style/Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:background">@drawable/abc_spinner_textfield_background_material</item>
    </style>

</resources>
