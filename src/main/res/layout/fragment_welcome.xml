<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_fragment_welcome"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_welcome_fragment_image_height"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/tv_fragment_welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_welcome_fragment_text_top_margin"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_super_large_welcome"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_fragment_welcome_content"
        android:layout_width="@dimen/activity_welcome_fragment_text_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_super_large" />

</LinearLayout>