<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cv_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:padding="5dp"
                android:text="任务名称"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/cv_task_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:padding="5dp"
                android:text="任务描述"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/cv_task_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:padding="5dp"
                android:text="到期时间：2016-04-16"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cv_task_check_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:lineSpacingExtra="4dp"
                android:padding="5dp" />

        </LinearLayout>

        <com.retropoktan.rptrello.widget.BezelImageView
            android:id="@+id/iv_task_member_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="2dp"
            android:src="@android:color/holo_green_dark"
            android:visibility="invisible"
            app:maskDrawable="@drawable/avatar_circle_mask"
            app:setOutline="false" />

        <com.retropoktan.rptrello.widget.BezelImageView
            android:id="@+id/iv_task_member_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="2dp"
            android:src="@android:color/holo_red_dark"
            android:visibility="invisible"
            app:maskDrawable="@drawable/avatar_circle_mask"
            app:setOutline="false" />

        <com.retropoktan.rptrello.widget.BezelImageView
            android:id="@+id/iv_task_member_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="2dp"
            android:src="@android:color/holo_orange_dark"
            android:visibility="invisible"
            app:maskDrawable="@drawable/avatar_circle_mask"
            app:setOutline="false" />

        <com.retropoktan.rptrello.widget.BezelImageView
            android:id="@+id/iv_task_member_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="2dp"
            android:src="@android:color/holo_orange_dark"
            android:visibility="invisible"
            app:maskDrawable="@drawable/avatar_circle_mask"
            app:setOutline="false" />

        <com.retropoktan.rptrello.widget.BezelImageView
            android:id="@+id/iv_task_member_5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="2dp"
            android:src="@android:color/holo_orange_dark"
            android:visibility="invisible"
            app:maskDrawable="@drawable/avatar_circle_mask"
            app:setOutline="false" />

    </LinearLayout>

</android.support.v7.widget.CardView>