<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_team"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.retropoktan.rptrello.widget.BezelImageView
            android:id="@+id/cv_team_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:color/holo_green_dark"
            app:maskDrawable="@drawable/board_rounded_mask"
            app:setOutline="false" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cv_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:padding="5dp"
                android:textSize="@dimen/text_size_super_large"
                tools:text="项目名称" />

            <TextView
                android:id="@+id/cv_team_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:padding="5dp"
                android:textColor="@android:color/darker_gray"
                tools:text="项目描述" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cv_team_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Owner：Xepherjin" />

            <TextView
                android:id="@+id/cv_team_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="The Number of Managers：6" />

            <TextView
                android:id="@+id/cv_team_worker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="The Number of Members：17" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>