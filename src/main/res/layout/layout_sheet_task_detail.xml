<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/tv_share_task_link"
            style="@style/Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Share Task Link"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tv_move_task"
            style="@style/Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Move Task"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tv_copy_task"
            style="@style/Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Cpoy Task"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tv_task_archive"
            style="@style/Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Archive"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tv_delete_task"
            style="@style/Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Delete"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>